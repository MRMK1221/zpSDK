<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/print_img_1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/print_1"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/print_6"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="70dp"
        android:text="1"
        android:textColor="#000000"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/print_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:text="65535"
        android:textColor="#000000"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/print_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="12"
        android:singleLine="true"
        android:text="香卤鸡心香卤鸡心香卤鸡心"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/print_img_1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/print_2"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_below="@+id/print_1"
                android:layout_marginTop="4dp"
                android:gravity="bottom"
                android:text="存储时间:"
                android:textColor="#000000"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/print_txt_1"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_below="@+id/print_1"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/print_2"
                android:text="19-12-17 10:00"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/print_3"
                android:layout_width="38dp"
                android:layout_height="15dp"
                android:layout_below="@id/print_txt_1"
                android:gravity="right"
                android:text="To:"
                android:textColor="#000000"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/print_txt_3"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_below="@id/print_txt_1"
                android:layout_marginLeft="1dp"
                android:layout_toRightOf="@id/print_3"
                android:text="19-12-17 10:00"
                android:textColor="#000000"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/print_7"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_below="@id/print_txt_3"
                android:layout_marginTop="3dp"
                android:gravity="bottom"
                android:text="可用时间:"
                android:textColor="#000000"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/print_txt_2"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_below="@id/print_txt_3"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/print_3"
                android:text="19-12-17 10:00"
                android:textColor="#000000"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/print_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/print_1"
        android:layout_marginTop="70dp"
        android:text="菜库"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/print_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/print_1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@+id/print_4"
        android:text="补打"
        android:textColor="#000000"
        android:textSize="10sp" />
</RelativeLayout>